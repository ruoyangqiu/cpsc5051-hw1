@model WEB1.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Ruoyang Qiu</h1>
    <img src="~/Content/Img/Seattle.jpg" class="img-fluid mx-auto d-block rounded-pill" />
</div>

<div class="row">
    <div class="col text-center">
        <h2>Number of Phones</h2>
        <h3>@Model.PhoneCount</h3>
    </div>
    <div class="col text-center">
        <h2>Number of Users</h2>
        <h3>@Model.UserCount</h3>
    </div>
    <div class="col text-center">
        <h2>Last Acess Time</h2>
        <h3>@Model.LastAcessDate.ToShortDateString()</h3>
    </div>
</div>